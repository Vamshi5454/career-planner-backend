{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true, // Enable decorators
    "emitDecoratorMetadata": true, // Emit metadata for decorators
    "skipLibCheck": true, // Skip library checks
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true
  }
}
